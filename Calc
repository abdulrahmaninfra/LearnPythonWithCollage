first= float(input("Enter your first figure: "))
second= float(input("Enter your second figure: "))


addition= first+second
subtraction= first-second
division= first/second
multiplication= first*second
powerof= first**second

print("The result of addition" , first, "and" , second, "is: ", addition)
print("The result of subtraction" , first, "from" , second, "is: ", subtraction)
print("The result of division" , first, "by" , second, "is: ", division)
print("The result of multiplication" , first, "and" , second, "is: ", multiplication)
print("The result of Power of" , first, "and" , second, "is: ", powerof)
